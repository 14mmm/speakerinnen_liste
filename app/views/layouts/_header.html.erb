<?xml version='1.0' encoding='UTF-8'?>
<% admin_header_class = 'admin' if controller_path =~ /admin\// %>
<header>
  <%= link_to(root_path, id: 'page-header__home-link') do %>
    <%= t(:home, scope: "layouts.application") %>
    <%= image_tag("logo8.png", alt: "logo", id: 'page-header__home-img') %>
  <% end %>

  <% if profile_signed_in? %>
    <%= link_to(t(:my_profile, scope: 'layouts.application'), profile_path(current_profile), class: 'page-header__link')%>
    |
    <%= link_to(t(:account, scope: 'layouts.application'), edit_profile_registration_path, class: 'page-header__link') %>
    |
    <%= link_to(t(:logout, scope: 'layouts.application'), destroy_profile_session_path, class: 'page-header__link', method: :delete) %>
  <% else %>
    <%= link_to(t(:signup, scope: 'layouts.application'), sign_up_path, class: 'page-header__link') %>
    |
    <%= link_to(t(:login, scope: 'layouts.application'), new_profile_session_path, class: 'page-header__link') %>
  <% end %>
  <% if admin?(current_profile) %>
    |||
    <%= link_to 'Admin', admin_root_path, class: 'page-header__link' %>
  <% end %>

  <span>
    <%= link_to_unless I18n.locale == :en, 'EN', {locale: :en}, class: 'page-header__link'  %> |
    <%= link_to_unless I18n.locale == :de, 'DE', {locale: :de}, class: 'page-header__link'  %>
  </span>
</header>

<% if notice %>
  <p class='notice'>
    <%= notice %>
  </p>
<% end %>
<% if alert %>
  <p class='alert'>
    <%= Array(alert).join('<br>').html_safe %>
  </p>
<% end %>
