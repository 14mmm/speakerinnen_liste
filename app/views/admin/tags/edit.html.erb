<div class="full-width-container">
  <div class="full-width-row administration">

    <div class="breadcrumb-navigation">Administration::<%= t(:tags, scope: 'admin.dashboard.tags')%>::<%= t(:edit, scope: "general")%></div>
      <%= form_tag(admin_tag_path(@tag.id, page: params[:page]), :method => "put", class: 'form-horizontal') do %>
        <div class="control-group">
            <%= label_tag("current_name", t(:current_name, scope: "general"), class:"control-label") %><br />
            <%= @tag.name %>
          </div>
          <div class="control-group">
            <%= label_tag("tag_name", t(:new_name, scope: "general"), class:"control-label") %>
            <%= text_field(:tag, :name, value: @tag.name, class: 'form-control') %>
          </div>
        <div class="control-group">
          <%= submit_tag(t(:ok, scope: "general"), class: 'btn btn-primary') %>
        </div>
      <% end %>      
    </div>
  </div>
</div>
